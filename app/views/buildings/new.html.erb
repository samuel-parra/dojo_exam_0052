<h1>New Building</h1>

<%= form_for(@building, :url => buildings_path, :method => "post") do |f| %>
<%= f.label :Name %>
<%= f.text_field :name %>
<br>
<%= f.label :Adress %>
<%= f.text_field :address %>
<br>
<%= f.label :City %>
<%= f.text_field :city %>
<br>
<%= f.submit :"Add" %>
<% end %>

<%= link_to "Return", controller: "buildings", action: "index" %>
