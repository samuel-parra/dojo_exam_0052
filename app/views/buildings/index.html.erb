<h1>Buildings#index</h1>
<p>Find me in app/views/buildings/index.html.erb</p>



<table>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>Show</th>
    </tr>
    <% @all.each do |b| %>
    <tr>
        <td> <%= b.name %>  </td>
        <td> <%= b.address %>  </td>
        <td> <%= b.city %>  </td>
        <td> <%= link_to "Show", controller: "buildings", action: "show", id: b.id %> </td>

    </tr>
    <% end %>
</table>

<%= link_to "New", controller: "buildings", action: "new" %>